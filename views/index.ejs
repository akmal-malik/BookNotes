<!DOCTYPE html>
<html>
<head>
  <title>Book Notes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>üìö My Book Notes</h1>

  <h2>Add a Book</h2>
  <form action="/add" method="POST">
    <input name="title" placeholder="Title" required />
    <input name="author" placeholder="Author" />
    <input name="isbn" placeholder="ISBN (for cover)" />
    <input name="rating" type="number" min="1" max="5" placeholder="Rating" />
    <input name="date_read" type="date" />
    <br><br>
    <textarea name="notes" placeholder="Your notes"></textarea>
    <br><br>
    <button type="submit">Add Book</button>
  </form>

  <hr>


  

 <% books.forEach(book => { %>
  <div class="book">
    <img 
      src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg"
      alt="Book cover"
      onerror="this.style.display='none'"
      width="120"
    />

    <div class="book-info">
      <h3><%= book.title %></h3>
      <p><strong>Author:</strong> <%= book.author %></p>
      <p><strong>Rating:</strong> <%= book.rating %>/5</p>
      <p><%= book.notes %></p>

      <form action="/delete/<%= book.id %>" method="POST">
        <button class="delete-btn" type="submit">‚ùå Delete</button>
      </form>
    </div>
  </div>
<% }) %>

</body>
</html>
